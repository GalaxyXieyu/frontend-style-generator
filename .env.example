# AI API 配置
# 支持两种模式: openai 或 azure
AI_PROVIDER=openai

# OpenAI 模式配置
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=your-api-key-here
AI_MODEL_ID=gpt-4o

# Azure OpenAI 模式配置（AI_PROVIDER=azure 时使用）
AZURE_ENDPOINT=https://your-resource.openai.azure.com
AZURE_DEPLOYMENT=your-deployment-name
AZURE_API_VERSION=2024-02-15-preview
AZURE_API_KEY=your-azure-api-key

# 通用配置
AI_MAX_TOKENS=8000
AI_TEMPERATURE=0.3

# 处理配置
CONCURRENCY=3
TIMEOUT_MS=30000
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# 输出配置
OUTPUT_DIR=../template
LANGUAGE=zh-CN
